{
	"cSpell.language": "en-GB,pl",
	"latex-workshop.latex.tools": [
		{
			"name": "pdflatex_escape",
			"command": "pdflatex",
			"args": [
				"-shell-escape",
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			],
			"env": {}
		},
		{
			"name": "lualatex",
			"command": "lualatex",
			"args": [
				"-shell-escape",
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			],
			"env": {}
		},
		{
			"name": "bibtex",
			"command": "bibtex",
			"args": [
				"%DOCFILE%"
			],
			"env": {}
		}
	],
	"latex-workshop.latex.recipes": [
		{
			"name": "Build thesis (pdflatex)",
			"tools": [
				"pdflatex_escape",
				"bibtex",
				"pdflatex_escape",
				"pdflatex_escape"
			]
		},
		// LuaLaTeX build takes almost twice as much time, leave it as an option, not default
		{
			"name": "Build thesis (lualatex)",
			"tools": [
				"lualatex",
				"bibtex",
				"lualatex",
				"lualatex"
			]
		}
	],
	"ltex.language": "en-GB",
	"ltex.additionalRules.motherTongue": "pl-PL",
	"cSpell.words": [
		"endignore",
		"inkscapelatex"
	]
}
